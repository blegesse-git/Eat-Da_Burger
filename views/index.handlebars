{{!-- burger pic here --}}
<h3>Eat-Da-Burger!</h3>


<div class="row">
    <div class="col-sm-6">
       <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                    <button type="button" class="eatburger" id="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}">EAT!</button>
                    <hr>
                {{/unless}}
            {{/each}}
        </ul> 
    </div>


    <div class="col-sm-6">
       <ul>
            {{#each burgers}}
                {{#if devoured}}
                    <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                    <hr>
                {{/if}}
            {{/each}}
        </ul> 
    </div>
</div>



<form class="burger-form>">
    <input type="text" id="newburger" name="burger">
    <button type="submit" id="submit">Submit</button>
</form>





