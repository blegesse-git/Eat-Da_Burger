{{!-- burger pic here --}}
<h3>Eat-Da-Burger!</h3>

<div class="row">
    <div class="col-sm-6">
       <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                    <button type="button" class="eatburger" id="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"
                    <hr>
                {{/unless}}
            {{/each}}
        </ul> 
    </div>
</div>
